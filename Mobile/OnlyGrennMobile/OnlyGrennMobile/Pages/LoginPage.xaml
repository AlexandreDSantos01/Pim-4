<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlyGrennMobile.Pages.LoginPage">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <!-- Ícone acima da mensagem de boas-vindas -->
        <Image Source="icons8.png"
               HeightRequest="100"
               WidthRequest="100"
               HorizontalOptions="Center" />

        <!-- Mensagem de boas-vindas -->
        <Label Text="Bem-vindo à OnlyGreen"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="#2f4538" />

        <!-- Campo de entrada para usuário -->
        <Entry x:Name="txtLogin" Placeholder="Usuário" />

        <!-- Campo de entrada para senha -->
        <Entry x:Name="txtSenha" Placeholder="Senha" IsPassword="True" />

        <!-- Botão de login com a cor de fundo personalizada -->
        <Button Text="Entrar" 
                BackgroundColor="#C0C0C0" 
                Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
