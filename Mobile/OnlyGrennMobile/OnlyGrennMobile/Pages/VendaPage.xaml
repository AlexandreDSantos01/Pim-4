<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlyGrennMobile.Pages.VendaPage"
             Title="VendaPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Lista de Vendas" FontSize="24" HorizontalOptions="Center" />

            <CollectionView x:Name="VendaCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nome}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="Cliente ID: {Binding ClienteId}" FontSize="14" />
                            <Label Text="Estoque ID: {Binding EstoqueId}" FontSize="14" />
                            <Label Text="Quantidade: {Binding Quantidade}" FontSize="14" />
                            <Label Text="Data de Registro: {Binding Dregistro}" FontSize="14" />
                            <Label Text="Valor: {Binding Valor, StringFormat='C'}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>