<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlyGrennMobile.Pages.EstoquePage"
             Title="EstoquePage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Lista de Estoque" FontSize="24" HorizontalOptions="Center" />

            <CollectionView x:Name="EstoqueCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nome}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="Quantidade: {Binding Quantidade}" FontSize="14" />
                            <Label Text="Data de Colheita: {Binding Dcolheita}" FontSize="14" />
                            <Label Text="Validade: {Binding Validade}" FontSize="14" />
                            <Label Text="PreÃ§o: {Binding Preco, StringFormat='C'}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>