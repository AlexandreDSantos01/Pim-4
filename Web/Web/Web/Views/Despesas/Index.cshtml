@model IEnumerable<Web.Models.Despesa>

@{
    // Define o título da página na propriedade ViewData
    ViewData["Title"] = "Despesas";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fazenda Urbana</title>
    <style>
        /* Estilo do corpo da página */
        body {
            background-color: #ffffff; /* Fundo Branco */
            margin: 0 10%; /* Margem lateral de 10% */
            font-family: sans-serif; /* Fonte padrão */
        }

        /* Estilo do título principal */
        h1 {
            text-align: center; /* Centralizado */
            font-family: serif; /* Fonte serifada */
            font-weight: normal; /* Peso normal da fonte */
            text-transform: uppercase; /* Texto em maiúsculas */
            border-bottom: 1px solid #000000; /* Borda inferior Preta */
            margin-top: 30px; /* Margem superior */
        }

        /* Estilo da tabela */
        table {
            width: 100%; /* Ocupa toda a largura disponível */
            border-collapse: collapse; /* Remove espaços entre células */
        }

        /* Estilo para cabeçalho e células da tabela */
        th, td {
            border: 1px solid #000000; /* Bordas finas pretas */
            padding: 10px; /* Espaçamento interno */
            text-align: left; /* Alinhamento à esquerda */
        }

        /* Cor alternada para as linhas (efeito zebra) */
        tbody tr:nth-child(odd) {
            background-color: #ffffff; /* Linhas ímpares com fundo branco */
        }

        tbody tr:nth-child(even) {
            background-color: #C0C0C0; /* Linhas pares com fundo verde claro */
        }

        /* Estilo para o cabeçalho */
        th {
            background-color: #C0C0C0; /* Fundo Preto */
            color: black; /* Texto preto */
            text-transform: uppercase; /* Texto em maiúsculas */
        }

        /* Contêiner da tabela com rolagem */
        .table-container {
            max-height: 400px; /* Altura máxima ajustada para 10 linhas */
            overflow-y: auto; /* Rolagem vertical ativa */
            border: 1px solid #000000; /* Borda ao redor da tabela */
            margin-top: 20px; /* Margem superior para separar da tabela */
        }
    </style>
</head>

<body>
    <!-- Título principal da página -->
    <h1>Despesas</h1>

    <!-- Contêiner para a tabela com rolagem -->
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <!-- Cabeçalhos das colunas com base nas propriedades do modelo -->
                    <th>@Html.DisplayNameFor(model => model.Produto)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
                    <th>@Html.DisplayNameFor(model => model.DRegistro)</th>
                    <th>@Html.DisplayNameFor(model => model.Valor)</th>
                    <th>@Html.DisplayNameFor(model => model.Fornecedor)</th>
                    <th></th> <!-- Coluna reservada para ações (ex.: Editar, Detalhes, Deletar) -->
                </tr>
            </thead>
            <tbody>
                <!-- Loop para criar uma linha para cada despesa no modelo -->
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Exibe os valores das propriedades de cada despesa -->
                        <td>@Html.DisplayFor(modelItem => item.Produto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                        <td>@Html.DisplayFor(modelItem => item.DRegistro)</td>
                        <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fornecedor.Nome)</td> <!-- Alterado para exibir o nome do fornecedor -->
                        <td>
                            <!-- Links para ações -->
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
