<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["OnlyGreen"] - OnlyGreen</title>

    <!-- Links para os arquivos CSS do Bootstrap e do projeto -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />

    <!-- Adiciona o conjunto de ícones do Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Estilo personalizado -->
    <style>
        /* Barra de navegação */
        .navbar {
            background-color: #C0C0C0 !important;
            border: 2px solid black;
            border-radius: 10px;
        }

        /* Rodapé */
        footer {
            background-color: #C0C0C0;
            color: black;
            border: 2px solid black;
            border-radius: 10px;
            padding: 5px 15px;
            text-align: center;
        }

        .footer-content {
            max-width: 1140px;
            margin: 0 auto;
        }

        footer a {
            color: #57b1dc;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        main {
            flex: 1;
        }

        .bi {
            color: #000000;
        }
    </style>
</head>

<body>
    <header>
        <!-- Barra de navegação -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo com ícone ao lado do nome -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/icons8-natural-food-70.png" alt="Ícone OnlyGreen" style="width: 30px; height: 30px; margin-right: 10px;">
                    OnlyGreen
                </a>
                <!-- Botão para o menu de navegação em dispositivos móveis -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                <i class="bi bi-people"></i> Usuários
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producoes" asp-action="Index">
                                <i class="bi bi-tools"></i> Produção
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Estoques" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Estoque
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">
                                <i class="bi bi-person-circle"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Fornecedores" asp-action="Index">
                                <i class="bi bi-truck"></i> Fornecedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Despesas" asp-action="Index">
                                <i class="bi bi-cash-coin"></i> Despesas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vendas" asp-action="Index">
                                <i class="bi bi-cart"></i> Vendas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Financeiros" asp-action="Index">
                                <i class="bi bi-bar-chart-line"></i> Financeiro
                            </a>
                        </li>
                    </ul>

                    <!-- Formulário de logout -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline" onsubmit="return confirmAndNotify();">
                            <button type="submit" class="btn btn-link nav-link" style="text-decoration: none; color: inherit;">
                                <i class="bi bi-box-arrow-right"></i> Sair
                            </button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Corpo principal da página -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Rodapé -->
    <footer>
        <div class="footer-content">
            &copy; 2024 - OnlyGreen - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmAndNotify() {
            if (confirm('Tem certeza que deseja sair?')) {
                alert('Você será desconectado. Até logo!');
                return true;
            }
            return false;
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
