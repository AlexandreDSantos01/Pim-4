@model IEnumerable<Web.Models.Usuario>

@{
    // Define o título da página na propriedade ViewData
    ViewData["Title"] = "Usuários";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fazenda Urbana</title>
    <style>
        /* Estilo do corpo da página */
        body {
            background-color: #ffffff; /* Fundo branco */
            margin: 0 10%; /* Margem lateral de 10% */
            font-family: sans-serif; /* Fonte padrão */
        }

        /* Estilo do título principal */
        h1 {
            text-align: center; /* Centralizado */
            font-family: serif; /* Fonte serifada */
            font-weight: normal; /* Peso normal da fonte */
            text-transform: uppercase; /* Texto em maiúsculas */
            border-bottom: 1px solid #000000; /* Borda inferior preta */
            margin-top: 30px; /* Margem superior */
        }

        /* Estilo da tabela */
        table {
            width: 100%; /* Ocupa toda a largura disponível */
            border-collapse: collapse; /* Remove espaços entre células */
        }

        /* Estilo para cabeçalho e células da tabela */
        th, td {
            border: 1px solid #000000; /* Bordas finas pretas */
            padding: 10px; /* Espaçamento interno */
            text-align: left; /* Alinhamento à esquerda */
        }

        /* Cor alternada para as linhas (efeito zebra) */
        tbody tr:nth-child(odd) {
            background-color: #ffffff; /* Linhas ímpares com fundo branco */
        }

        tbody tr:nth-child(even) {
            background-color: #dbead5; /* Linhas pares com fundo verde claro */
        }

        /* Estilo para o cabeçalho */
        th {
            background-color: #dbead5; /* Fundo Verde */
            color: black; /* Texto preto */
            text-transform: uppercase; /* Texto em maiúsculas */
        }

        /* Contêiner da tabela com rolagem */
        .table-container {
            max-height: 400px; /* Altura máxima ajustada para 10 linhas */
            overflow-y: auto; /* Rolagem vertical ativa */
            border: 1px solid #000000; /* Borda ao redor da tabela */
            margin-top: 20px; /* Margem superior para separar da tabela */
        }
    </style>
</head>

<body>
    <!-- Título principal da página -->
    <h1>Usuários</h1>

    <!-- Contêiner para a tabela com rolagem -->
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <!-- Cabeçalhos das colunas -->
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Rua)</th>
                    <th>@Html.DisplayNameFor(model => model.NRua)</th>
                    <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.Cep)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.Situacao)</th>
                    <th></th> <!-- Coluna para ações -->
                </tr>
            </thead>
            <tbody>
                <!-- Loop para criar as linhas na tabela -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Rua)</td>
                        <td>@Html.DisplayFor(modelItem => item.NRua)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cep)</td>
                        <td>@Html.DisplayFor(modelItem => item.TipoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.Situacao)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
