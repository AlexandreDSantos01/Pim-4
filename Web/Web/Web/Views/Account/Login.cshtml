@model Web.Models.UserLogin

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #FFFFFF;
            margin: 0 10%;
            font-family: sans-serif;
        }

        h1 {
            text-align: center;
            font-family: serif;
            font-weight: normal;
            text-transform: uppercase;
            border-bottom: 1px solid #57b1dc;
            margin-top: 30px;
        }

        h2 {
            color: #470000;
            font-size: 1em;
        }
    </style>
</head>

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="Ulogar">Usuário</label>
        <input type="text" class="form-control" id="Ulogar" name="Ulogar" required />
    </div>

    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" class="form-control" id="Senha" name="Senha" required />
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>

    <!-- Exibindo erros de validação -->
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger mt-3" })

    <!-- Exibindo erros específicos via ViewData -->
    @if (!String.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger mt-3">
            @ViewData["ErrorMessage"]
        </div>
    }
</form>
