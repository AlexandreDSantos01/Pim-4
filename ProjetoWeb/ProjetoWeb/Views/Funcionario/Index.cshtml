@model IEnumerable<ProjetoWeb.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Funcionarios</h1>

<p>
    <!--<a asp-action="Create">Create New</a>-->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome) <!-- Alterando para usar First() -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email) <!-- Alterando para usar First() -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Telefone) <!-- Alterando para usar First() -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Endereco) <!-- Alterando para usar First() -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Salario) <!-- Alterando para usar First() -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Tipo) <!-- Adicionando a coluna Tipo -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo) <!-- Exibindo o Tipo -->
                </td>
                <td>
                   <!-- <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |-->
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                   <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>-->
                </td>
            </tr>
        }
    </tbody>
</table>
